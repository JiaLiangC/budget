<div class="budgets-new">
  <form action="/budgets" method="post">
    <div class="form-group">
      <label>Choose Time</label>
      <div class="time-pick "  >

        <span class="pull-left" >
          <i class="fa fa-calendar"></i>
        </span>

        <input name="budget_time" id="datepicker" type="text" readonly
        value="<%= params[:budget_time] unless @errors[:budget_time] %>"
        required>
        <div class="errors"><%= @errors[:budget_time] %></div>
      </div>
    </div>
    
    <div class="form-group budget-num">
      <label>Num</label>
      <input type="text" name="budget_num" class="form-control" placeholder="input your budget of month" value="<%= params[:budget_num] unless @errors[:budget_num] %>" required/>

      <div class="errors"><%= @errors[:budget_num] %></div>
    </div>

    <input type="hidden" id="category" name="expense_category" />

    <button class="btn btn-success">Submit</button>
  </form>
</div>

<script type="text/javascript">
  $(function(){
    $('#datepicker').datepicker({
    viewMode: 'years',
    format: 'yyyy-mm',
    minViewMode: "months"
    });
  })
</script>